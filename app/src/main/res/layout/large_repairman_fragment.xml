<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10sp">

        <TextView
            android:id="@+id/largeFragmentNameAndSurname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Name Surname"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/largeRepairmanImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10sp"
                    app:srcCompat="@drawable/blankuser1"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <Button
                    android:id="@+id/ratingButton"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:background="@drawable/rating_star"
                    android:text="4.7"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    app:srcCompat="@drawable/rating_star"
                    android:layout_alignParentBottom="true"
                    android:layout_alignEnd="@+id/largeRepairmanImage" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp">

                <TableRow
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="10sp">

                    <TextView
                        android:id="@+id/largeFragmentDescriptionTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:paddingEnd="20sp"
                        android:text="@string/largeFragmentDescriptionTitle" />

                    <TextView
                        android:id="@+id/largeFragmentDescriptionView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                </TableRow>

                <TableRow
                    android:id="@+id/rating"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/largeFragmentRatingTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:paddingEnd="20sp"
                        android:gravity="center_vertical"
                        android:text="@string/largeFragmentRatingTitle" />

                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="@style/Widget.AppCompat.RatingBar.Indicator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/largeAverageRatingButton"
                        android:layout_centerHorizontal="true"
                        android:clickable="false"
                        android:numStars="5"
                        android:rating="0" />
                </TableRow>

                <TableRow
                    android:id="@+id/professions"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="10sp">

                    <TextView
                        android:id="@+id/largeFragmentProfessionsTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:paddingEnd="20sp"
                        android:text="@string/largeFragmentProfessionsTitle" />

                    <TextView
                        android:id="@+id/largeFragmentProfessionsView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />
                </TableRow>

                <TableRow
                    android:id="@+id/regions"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="10sp">

                    <TextView
                        android:id="@+id/largeFragmentRegionsTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:paddingEnd="20sp"
                        android:text="@string/largeFragmentRegionsTitle" />

                    <TextView
                        android:id="@+id/largeFragmentRegionsView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />
                </TableRow>

                <TableRow
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="10sp">

                    <TextView
                        android:id="@+id/largeFragmentAddressTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:paddingEnd="20sp"
                        android:text="@string/largeFragmentAddressTitle" />

                    <TextView
                        android:id="@+id/largeFragmentAddressView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />
                </TableRow>

                <TableRow
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="10sp">

                    <TextView
                        android:id="@+id/largeFragmentEmailTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:paddingEnd="20sp"
                        android:text="@string/largeFragmentEmailTitle" />

                    <TextView
                        android:id="@+id/largeFragmentEmailView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />
                </TableRow>

                <TableRow
                    android:id="@+id/mobile1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="10sp">

                    <TextView
                        android:id="@+id/largeFragmentMobile1Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:paddingEnd="20sp"
                        android:text="@string/largeFragmentMobile1Title" />

                    <TextView
                        android:id="@+id/largeFragmentMobile1View"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />
                </TableRow>

                <TableRow
                    android:id="@+id/mobile2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="10sp">

                    <TextView
                        android:id="@+id/largeFragmentMobile2Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:paddingEnd="20sp"
                        android:text="@string/largeFragmentMobile2Title" />

                    <TextView
                        android:id="@+id/largeFragmentMobile2View"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                </TableRow>
    </TableLayout>

            <RelativeLayout
                android:id="@+id/AcceptButtons"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/selectRepairmanButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:background="@color/selectRepairmanButton"
                    android:text="@string/selectRepairmanButton"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_margin="10sp"/>

                <Button
                    android:id="@+id/cancelRepairmanButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toStartOf="@+id/selectRepairmanButton"
                    android:background="@color/cancelRepairmanButton"
                    android:text="@string/cancelRepairmanButton"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_margin="10sp"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>